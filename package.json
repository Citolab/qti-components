    "madge": "^8.0.0",
    "mdx-mermaid": "^2.0.3",
    "mermaid": "^11.12.0",
    "msw": "^2.11.5",
    "msw-storybook-addon": "^2.0.5",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "pkg-pr-new": "^0.0.51",
    "playwright": "^1.53.0",
    "postcss": "^8.5.6",
    "postcss-class-apply": "^4.0.1",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
