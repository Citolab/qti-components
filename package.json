{
  "name": "qti-components-workspace",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Citolab/qti-components.git"
  },
  "description": "QTI webcomponents",
  "author": {
    "name": "Patrick de Klein"
  },
  "type": "module",
  "contributors": [
    {
      "name": "Sander Looise"
    },
    {
      "name": "Marcel Hoekstra"
    },
    {
      "name": "Denise Broekman"
    }
  ],
  "license": "GPLv3",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "storybook": "run-p storybook:dev cem:watch",
    "test-all": "run-s clean build cem publint lint tsc test madge attw",
    "-----------------------workspace--": "-",
    "lint": "eslint",
    "test": "run-s build vitest-run",
    "vitest-run": "vitest run",
    "tsc": "tsc --noEmit",
    "clean": "pnpm -r run clean",
    "build": "pnpm -r run build",
    "attw": "pnpm -r run attw",
    "publint": "pnpm -r run publint",
    "-----------------------development--": "-",
    "watch": "nodemon --watch src --ext ts,css --exec \"run-s tsup cem css && yalc push\"",
    "-----------------------cmds--": "-",
    "pre-commit": "run-s tsc lint madge",
    "commit-msg": "commitlint --edit",
    "build-storybook": "pnpm run cem && storybook build",
    "-----------------------scripts--": "-",
    "storybook:dev": "storybook dev -p 6006 --no-open",
    "cem": "cem analyze",
    "cem:watch": "cem analyze --watch",
    "css": "postcss packages/qti-theme/src/item.css -d dist -m",
    "chromatic": "node chromatic-runner.cjs",
    "madge": "madge packages/*/src --extensions ts,tsx,js --circular",
    "commitlint": "commitlint --edit",
    "-----------------------npm--": "-",
    "release": "release-please",
    "publish:interactions": "pnpm -r --filter @qti-components/utilities --filter @qti-components/base --filter @qti-components/interactions run build && pnpm -r --filter @qti-components/utilities --filter @qti-components/base --filter @qti-components/interactions publish --access public",
    "publish:interactions:next": "pnpm -r --filter @qti-components/utilities --filter @qti-components/base --filter @qti-components/interactions run build && pnpm -r --filter @qti-components/utilities --filter @qti-components/base --filter @qti-components/interactions publish --access public --tag next",
    "publish:interactions:dry-run": "pnpm -r --filter @qti-components/utilities --filter @qti-components/base --filter @qti-components/interactions run build && pnpm -r --filter @qti-components/utilities --filter @qti-components/base --filter @qti-components/interactions publish --access public --dry-run",
    "deps:lint": "syncpack lint",
    "deps:fix": "syncpack fix",
    "deps:format": "syncpack format",
    "deps:format:check": "syncpack format --check",
    "deps:check": "manypkg check",
    "deps:fix:manypkg": "manypkg fix",
    "pm:check": "sherif",
    "preinstall": "sherif",
    "prepare": "husky"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@chromatic-com/storybook": "^5.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@eslint/js": "^9.39.2",
    "@manypkg/cli": "^0.25.1",
    "@open-wc/lit-helpers": "^0.7.0",
    "@storybook/addon-a11y": "^10.2.2",
    "@storybook/addon-docs": "^10.2.2",
    "@storybook/addon-links": "^10.2.2",
    "@storybook/addon-themes": "^10.2.2",
    "@storybook/addon-vitest": "^10.2.2",
    "@storybook/web-components-vite": "^10.2.2",
    "@swc/core": "^1.15.11",
    "@testing-library/dom": "^10.4.1",
    "@types/dom-view-transitions": "^1.0.6",
    "@types/node": "^24.10.9",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "@wc-toolkit/cem-inheritance": "^1.2.2",
    "@wc-toolkit/cem-sorter": "^1.0.1",
    "@wc-toolkit/cem-utilities": "^1.5.4",
    "@wc-toolkit/changelog": "^1.0.2",
    "@wc-toolkit/jsx-types": "^1.5.2",
    "@wc-toolkit/storybook-helpers": "^10.0.0",
    "@wc-toolkit/type-parser": "^1.2.0",
    "autoprefixer": "^10.4.23",
    "baseline-browser-mapping": "^2.9.19",
    "chromatic": "^13.3.5",
    "custom-element-vs-code-integration": "^1.5.0",
    "custom-elements-manifest-deprecator": "^1.2.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-storybook": "^10.2.2",
    "eslint-plugin-wc": "^3.0.2",
    "fast-xml-parser": "^5.3.4",
    "globals": "^16.5.0",
    "globby": "^14.1.0",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "mdx-mermaid": "^2.0.3",
    "mermaid": "^11.12.2",
    "msw": "^2.12.7",
    "msw-storybook-addon": "^2.0.6",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "pkg-pr-new": "^0.0.51",
    "playwright": "^1.58.0",
    "postcss": "^8.5.6",
    "postcss-class-apply": "^4.0.1",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "prettier": "3.5.3",
    "prettier-v2": "npm:prettier@2.8.8",
    "publint": "^0.3.17",
    "release-please": "^17.2.0",
    "remark-gfm": "^4.0.1",
    "shadow-dom-testing-library": "^1.13.1",
    "sherif": "^1.10.0",
    "storybook": "^10.2.2",
    "storybook-addon-tag-badges": "^3.0.5",
    "syncpack": "14.0.0-alpha.40",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.4.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.18",
    "yalc": "1.0.0-pre.53"
  },
  "customElements": "custom-elements.json",
  "bugs": {
    "url": "https://github.com/Citolab/qti-components/issues"
  },
  "homepage": "https://github.com/Citolab/qti-components#readme",
  "overrides": {
    "storybook": "$storybook"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
