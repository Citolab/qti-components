{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "outDir": "./dist",
    "rootDir": "./src",
    
    "paths": {
      "@citolab/qti-components/qti-components": ["./src/lib/qti-components"],
      "@citolab/qti-components/qti-item": ["./src/lib/qti-item"],
      "@citolab/qti-components/qti-transformers": ["./src/lib/qti-transformers"],
      "@citolab/qti-components/qti-loader": ["./src/lib/qti-loader"],
      "@citolab/qti-components/qti-test": ["./src/lib/qti-test"]
    },
    "types": ["vitest/globals","@types/dom-view-transitions","./test/vitest.d.ts"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}