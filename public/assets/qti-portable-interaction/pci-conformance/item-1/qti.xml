<?xml version="1.0" encoding="UTF-8"?>
<qti-assessment-item xmlns="http://www.imsglobal.org/xsd/imsqtiasi_v3p0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqtiasi_v3p0 https://purl.imsglobal.org/spec/qti/v3p0/schema/xsd/imsqti_asiv3p0p1_v1p0.xsd"
  identifier="pci-graphing-interaction-1" title="PCI Graphing Interaction 1"
  xml:lang="en-US" adaptive="false" time-dependent="false">
  <qti-response-declaration identifier="RESPONSE" cardinality="multiple" base-type="point">
    <qti-correct-response>
      <qti-value>1 -3</qti-value>
    </qti-correct-response>
  </qti-response-declaration>
  <qti-item-body>
    <div class="qti-layout-row">
      <div class="qti-layout-col12">
        <p class="stimulus"> The graph shows point <em>L</em>. What is the location of a point 5
      units down and 2 units to the left of point <em>L</em>? </p>
        <qti-portable-custom-interaction
          response-identifier="RESPONSE"
          module="GraphingInteraction"
          custom-interaction-type-identifier="urn:ampup:pci:2025:graphingInteraction"
          data-width="400"
          data-height="400"
          data-id="graph"
          data-graphtype="scatter"
          data-planetype="default"
          data-title=""
          data-vlines="10"
          data-hlines="10"
          data-borderlinewidth="3"
          data-axislinewidth="3"
          data-steplinewidth="1"
          data-maxpoints="1"
          data-minpoints="1"
          data-xaxis="{ &amp;quot;step&amp;quot;: 1, &amp;quot;substeps&amp;quot;: 1, &amp;quot;label&amp;quot;: &amp;quot;x&amp;quot;, &amp;quot;labelprecision&amp;quot;: 0, &amp;quot;precision&amp;quot;: 0 }"
          data-yaxis="{ &amp;quot;step&amp;quot;: 1, &amp;quot;substeps&amp;quot;: 1, &amp;quot;label&amp;quot;: &amp;quot;y&amp;quot;, &amp;quot;labelprecision&amp;quot;: 0, &amp;quot;precision&amp;quot;: 0 }"
          data-fixedpoints="{ &amp;quot;points&amp;quot;: [{ &amp;quot;x&amp;quot;: 3, &amp;quot;y&amp;quot;: 2, &amp;quot;label&amp;quot;: &amp;quot;L&amp;quot; }]}"
        >
          <qti-prompt>Plot the point on the coordinate grid.</qti-prompt>
          <qti-interaction-markup>
            <div id="graph" class="graph-container"></div>
          </qti-interaction-markup>
          <qti-stylesheet href="css/styles.css" type="text/css" />
        </qti-portable-custom-interaction>
      </div>
    </div>
  </qti-item-body>
  <qti-response-processing
    template="https://purl.imsglobal.org/spec/qti/v3p0/rptemplates/match_correct" />
</qti-assessment-item>