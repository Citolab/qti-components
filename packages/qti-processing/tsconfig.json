{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "/src",
        "paths": {
            "@qti-components/*": [
                "../../qti-shared/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
